    {
      "name": "New Message",
      "short_name": "Message",
      "description": "Send a new encrypted message",
      "url": "/?action=new-message",
      "icons": [{ "src": "/icons/shortcut-message.png", "sizes": "96x96" }]
    },
    {
      "name": "Contacts",
      "short_name": "Contacts",
